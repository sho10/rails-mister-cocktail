<div class="container">
    <h3><%= link_to "Back to all cocktails", root_path %></h3>
    <h3><%= link_to 'Dose', new_cocktail_dose_path(@cocktail) %></h3>
<div class="card">

  <div class="card-picture">
    <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
  </div>
  <div class="card">
  <div class="cocktail-name-description">
  <h2><%= @cocktail.name %></h2>
  <h2>Description:</h2>
  <% @cocktail.doses.each do |dose| %>
    <h2><%= dose.description %></h2>
    <h2><%= dose.ingredient.name %></h2>
    <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
         <i class="fa fa-trash destroy_dose"></i>
     <% end %>
      <% end %>
      </div>
  </div>
</div>
</div>
